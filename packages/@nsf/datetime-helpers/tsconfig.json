{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "@nsf/datetime-helpers": [
        "addon"
      ],
      "@nsf/datetime-helpers/*": [
        "addon/*"
      ],
      "@nsf/datetime-helpers/test-support": [
        "addon-test-support"
      ],
      "@nsf/datetime-helpers/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ],
	"typedocOptions": {
		"name": "@nsf/datetime-helpers",
		"out": "docs",
		"theme": "minimal",
		"excludeExternals": true,
		"disableSources": false,

		"entryPoints": [
			"addon/index.ts",
		]
	}
}
